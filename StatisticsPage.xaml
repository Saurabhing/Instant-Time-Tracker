<Page x:Class="InstantTimeTracker.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:InstantTimeTracker"
      Title="Statistics View">
    <Page.Resources>
        <local:PercentageConverter x:Key="PercentConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20" Orientation="Horizontal">
            <TextBlock Text="History &amp; Logs" FontSize="28" FontWeight="Light" Foreground="#2C3E50" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <DatePicker x:Name="datePicker" Width="150" SelectedDateChanged="DatePicker_SelectedDateChanged" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#DDDDDD" Opacity="0.5"/>
            </Border.Effect>

            <DataGrid x:Name="gridHistory" AutoGenerateColumns="False" IsReadOnly="True"
                      Background="White" RowBackground="White" AlternatingRowBackground="#FAFAFA"
                      HeadersVisibility="Column" BorderThickness="0" GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Application" Binding="{Binding FriendlyName}" Width="*" FontWeight="SemiBold" Foreground="#34495E"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding DurationString}" Width="150" FontWeight="Bold" Foreground="#2C3E50"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>