<Page x:Class="InstantTimeTracker.DayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:InstantTimeTracker"
      Title="Day View"
      Unloaded="Page_Unloaded">

    <Page.Resources>
        <local:PercentageConverter x:Key="PercentConverter"/>
        <local:CategoryVisibilityConverter x:Key="CategoryVisibilityConverter"/>
        <local:FilterToVisibilityConverter x:Key="FilterToVisibilityConverter"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#DDDDDD" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border BorderThickness="1" BorderBrush="#AAB7B8" CornerRadius="6" Padding="10,6" Background="White" Margin="0,0,5,0">
                    <TextBlock x:Name="txtDateDisplay" Text="Sat, 06-12-2025" VerticalAlignment="Center" Foreground="#333" FontSize="14" Margin="0,0,10,0" Width="110"/>
                </Border>
                <Button Content="‹" Width="30" Height="30" Click="BtnPrev_Click" Margin="2,0"/>
                <Button Content="›" Width="30" Height="30" Click="BtnNext_Click" Margin="2,0"/>
                <Button Content="⟲" Width="30" Height="30" Click="BtnToday_Click" Margin="2,0"/>
                <DatePicker x:Name="datePickerHidden" Width="0" Opacity="0" SelectedDateChanged="DatePicker_DateChanged"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBox x:Name="txtNewMode" Width="100" Height="30" VerticalContentAlignment="Center" Padding="5,0" Margin="0,0,5,0" BorderBrush="#CCC" BorderThickness="1"/>
                <Button Content="+" Width="30" Height="30" Click="BtnAddMode_Click" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderThickness="0" ToolTip="Add New Mode"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock Text="View: " VerticalAlignment="Center" Foreground="#777" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbFilter" Width="110" SelectionChanged="CmbFilter_SelectionChanged" Background="White"/>

                <Button Content="-" Width="30" Height="30" Click="BtnDeleteMode_Click" Margin="5,0,0,0" 
                        Background="#E74C3C" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        ToolTip="Delete the currently selected mode (cannot delete Study or Everything)"/>
            </StackPanel>

            <StackPanel Grid.Column="4" Orientation="Horizontal">
                <Border Style="{StaticResource CardStyle}" Padding="15,8" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="SESSION" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDashSession" Text="00:00:00" FontSize="18" FontWeight="Bold" Foreground="#2980B9"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}" Padding="15,8">
                    <StackPanel>
                        <TextBlock Text="TOTAL" FontSize="10" Foreground="#999" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDashTotal" Text="00:00:00" FontSize="18" FontWeight="Bold" Foreground="#27AE60"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
            <DataGrid x:Name="gridDashboard" AutoGenerateColumns="False" IsReadOnly="True"
                      Background="White" RowBackground="White" HeadersVisibility="None" BorderThickness="0" 
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F0F0F0">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding AppIcon}" Width="24" Height="24" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FriendlyName}" FontSize="14" Foreground="#333"/>
                                    <Border Background="#EEE" CornerRadius="3" Margin="10,0,0,0" Padding="4,1"
                                            Visibility="{Binding ElementName=cmbFilter, Path=SelectedItem, Converter={StaticResource FilterToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Category}" FontSize="10" Foreground="#666"/>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding DurationString}" Width="100" FontSize="14" Foreground="#333"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>