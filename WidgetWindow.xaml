<Window x:Class="InstantTimeTracker.WidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widget" Height="120" Width="220"
        ResizeMode="CanResizeWithGrip" MinHeight="90" MinWidth="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="LightComboStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Padding" Value="5"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainContainer" CornerRadius="12" BorderBrush="#33FFFFFF" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E6121212" Offset="0"/>
                <GradientStop Color="#E61E1E1E" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20,10,20,15" Background="Transparent">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open Dashboard" Click="OpenDashboard_Click"/>
                    <MenuItem Header="Always on Top" IsCheckable="True" IsChecked="True" Click="ToggleTopmost_Click"/>
                    <MenuItem Header="Minimize to Tray" Click="MinimizeToTray_Click"/>
                    <Separator/>
                    <MenuItem Header="Quit" Click="Exit_Click"/>
                </ContextMenu>
            </Grid.ContextMenu>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="cmbCategory" Width="130" HorizontalAlignment="Left" 
                                  SelectionChanged="CmbCategory_SelectionChanged"
                                  Style="{StaticResource LightComboStyle}"
                                  Margin="-5,0,0,0"/>

                        <Button x:Name="btnPause" Click="BtnPause_Click" Background="Transparent" BorderThickness="0" 
                                Foreground="#FF5555" Margin="10,0,0,0" Cursor="Hand" ToolTip="Pause Tracking">
                            <TextBlock x:Name="txtPauseIcon" Text="⏸" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="txtSessionTime" Text="00:00:00" Foreground="White" FontSize="36" FontWeight="Light" FontFamily="Segoe UI Light" Margin="0,-4,0,0"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Total: " Foreground="#888888" FontSize="11"/>
                        <TextBlock x:Name="txtTotalTime" Text="00:00:00" Foreground="#CCCCCC" FontSize="11" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="btnToggle" Content="▼" Click="BtnToggle_Click" Grid.Column="1"
                        VerticalAlignment="Top" Background="Transparent" BorderThickness="0" 
                        Foreground="White" FontWeight="Bold" Cursor="Hand" Width="20" Height="20" Margin="0,5,0,0"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0,15,0,0" x:Name="panelActiveApp">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgAppIcon" Width="18" Height="18" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock x:Name="txtActiveApp" Text="..." Foreground="#AAAAAA" FontSize="12" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Border>
</Window>